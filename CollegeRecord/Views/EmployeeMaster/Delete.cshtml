@model CollegeRecord.Models.EmployeeMaster

@{
    ViewData["Title"] = "Delete";
}

<div class="card mt-3">
    <div class="card card-header d-flex align-items-center gap-3 mt-3">
        <h3> Delete Employee</h3>
    </div>
    <div class="card card-body d-flex  gap-3 mt-3">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MiddleName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MiddleName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MobileNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MobileNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            @{
                var date = Model.BirthDate.ToString("dd-MMM-yyyy");
            }
            <dd class="col-sm-10">
                @Html.DisplayFor(model => date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.salary)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.salary)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.departmentMaster.DeptName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.departmentMaster.DeptName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.designationMaster.DesignName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.designationMaster.DesignName)
            </dd>
        </dl>
    </div>
    <div class=" card card-footer d-flex align-items-center mt-3  gap-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="EmpId" />
            <input type="submit" value="Delete" class="btn btn-danger mx-3 mt-1 mb-1" />
            <a class="btn btn-secondary mx-3 mt-1 mb-1" asp-action="Index">Back</a>
        </form>
    </div>
    
</div>



