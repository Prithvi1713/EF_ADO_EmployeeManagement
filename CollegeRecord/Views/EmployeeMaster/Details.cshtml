@model CollegeRecord.Models.EmployeeMaster

@{
    ViewData["Title"] = "Details";
}


<div class="card  mt-4">
    <div class="card card-header  d-flex align-items-center gap-3 mt-3">
        <h3> Employee Details</h3>
    </div>
    <div class="card card-body d-flex  gap-3 mt-3">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MiddleName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MiddleName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MobileNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MobileNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            @{
                var date = Model.BirthDate.ToString("dd-MMM-yyyy");
            }
            <dd class="col-sm-10">
                @Html.DisplayFor(model => date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.salary)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.salary)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.departmentMaster.DeptName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.departmentMaster.DeptName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.designationMaster.DesignName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.designationMaster.DesignName)
            </dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-center gap-3 mt-3 mb-3">
        <a class="btn btn-warning mx-3 mb-2 mt-2" asp-action="Edit" asp-route-id="@Model.EmpId">Edit</a>
        <a class="btn btn-secondary mx-3 mb-2 mt-2" asp-action="Index">Back</a>
    </div>
</div>


